<div class="header">
   <h1>TomatoBase</h1>
</div>
<div class="container">
  <div class="login_form">
  <h2>Log In</h2>
    <div class="new-session">
      <%= form_tag session_path, :method => :post do %>
        <%= label_tag :email %>
        <%= text_field_tag :email %>

        <%= label_tag :password %>
        <%= password_field_tag :password %>

        <%= submit_tag "Login" %>
      <% end %>
      <%= link_to "Sign Up!", new_user_path, class: "sign-up" %>
   </div>
  </div>
</div>